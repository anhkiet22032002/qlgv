CREATE DATABASE QLGV
GO

USE QLGV
GO
--1. Tạo quan hệ và khai báo tất cả các ràng buộc khóa chính, khóa ngoại. Thêm vào 3 thuộc tính
--GHICHU, DIEMTB, XEPLOAI cho quan hệ HOCVIEN.

--Tạo quan hệ, khai báo ràng buộc khóa chính
--KHOA
CREATE TABLE KHOA
(
	MAKHOA VARCHAR(4) NOT NULL,
	TENKHOA VARCHAR(40),
	NGTLAP SMALLDATETIME,
	TRGKHOA CHAR(4)
)
GO
ALTER TABLE dbo.KHOA ADD CONSTRAINT PK_KHOA PRIMARY KEY(MAKHOA)
GO

--HOCVIEN
CREATE TABLE HOCVIEN
(
	MAHV CHAR(5) NOT NULL,
	HO VARCHAR(40),
	TEN VARCHAR(10),
	NGSINH SMALLDATETIME,
	GIOITINH VARCHAR(3),
	NOISINH VARCHAR(40),
	MALOP CHAR(3)
)
GO
ALTER TABLE dbo.HOCVIEN ADD CONSTRAINT PK_HOCVIEN PRIMARY KEY(MAHV)
GO

--LOP
CREATE TABLE LOP
(
	MALOP CHAR(3) NOT NULL,
	TENLOP VARCHAR(40),
	TRGLOP CHAR(5),
	SISO TINYINT,
	MAGVCN CHAR(4)
)
GO
ALTER TABLE dbo.LOP ADD CONSTRAINT PK_LOP PRIMARY KEY(MALOP)
GO

--MONHOC
CREATE TABLE MONHOC
(
	MAMH VARCHAR(10) NOT NULL,
	TENMH VARCHAR(40),
	TCLT TINYINT,
	TCTH TINYINT,
	MAKHOA VARCHAR(4)
)
GO
ALTER TABLE dbo.MONHOC ADD CONSTRAINT PK_MONHOC PRIMARY KEY(MAMH)
GO

--DIEUKIEN
CREATE TABLE DIEUKIEN
(
	MAMH VARCHAR(10) NOT NULL,
	MAMH_TRUOC VARCHAR(10) NOT NULL
)
GO
ALTER TABLE dbo.DIEUKIEN ADD CONSTRAINT PK_DIEUKIEN PRIMARY KEY(MAMH,MAMH_TRUOC)
GO

--GIAOVIEN
CREATE TABLE GIAOVIEN
(
	MAGV CHAR(4) NOT NULL,
	HOTEN VARCHAR(40),
	HOCVI VARCHAR(10),
	HOCHAM VARCHAR(10),
	GIOITINH VARCHAR(3),
	NGSINH SMALLDATETIME,
	NGVL SMALLDATETIME,
	HESO NUMERIC(4,2),
	MUCLUONG MONEY,
	MAKHOA VARCHAR(4)
)
GO
ALTER TABLE dbo.GIAOVIEN ADD CONSTRAINT PK_GIAOVIEN PRIMARY KEY(MAGV)
GO

--GIANGDAY
CREATE TABLE GIANGDAY
(
	MALOP CHAR(3) NOT NULL,
	MAMH VARCHAR(10) NOT NULL,
	MAGV CHAR(4),
	HOCKY TINYINT,
	NAM SMALLINT,
	TUNGAY SMALLDATETIME,
	DENNGAY SMALLDATETIME
)
GO
ALTER TABLE dbo.GIANGDAY ADD CONSTRAINT PK_GIANGDAY PRIMARY KEY(MALOP,MAMH)
GO

--KETQUATHI
CREATE TABLE KETQUATHI
(
	MAHV CHAR(5) NOT NULL,
	MAMH VARCHAR(10) NOT NULL,
	LANTHI TINYINT NOT NULL,
	NGTHI SMALLDATETIME,
	DIEM NUMERIC(4,2),
	KQUA VARCHAR(10)
)
GO
ALTER TABLE dbo.KETQUATHI ADD CONSTRAINT PK_KQT	PRIMARY KEY(MAHV,MAMH,LANTHI)
GO

--Nhập dữ liệu
SET DATEFORMAT DMY
GO

