--Khai báo khóa ngoại
--HOCVIEN
ALTER TABLE dbo.HOCVIEN ADD CONSTRAINT FK_HV FOREIGN KEY(MALOP) REFERENCES dbo.LOP(MALOP)
GO

--LOP
ALTER TABLE dbo.LOP ADD CONSTRAINT FK1_LOP FOREIGN KEY(TRGLOP) REFERENCES dbo.HOCVIEN(MAHV)
GO
ALTER TABLE dbo.LOP ADD CONSTRAINT FK2_LOP FOREIGN KEY(MAGVCN) REFERENCES dbo.GIAOVIEN(MAGV)
GO

--KHOA
ALTER TABLE dbo.KHOA ADD CONSTRAINT FK_KHOA FOREIGN KEY(TRGKHOA) REFERENCES dbo.GIAOVIEN(MAGV)
GO

--MONHOC
ALTER TABLE dbo.MONHOC ADD CONSTRAINT FK_MONHOC FOREIGN KEY(MAKHOA) REFERENCES dbo.KHOA(MAKHOA)
GO

--DIEUKIEN
ALTER TABLE dbo.DIEUKIEN ADD CONSTRAINT FK1_DK FOREIGN KEY(MAMH) REFERENCES dbo.MONHOC(MAMH)
GO
ALTER TABLE dbo.DIEUKIEN ADD CONSTRAINT FK2_DK FOREIGN KEY(MAMH_TRUOC) REFERENCES dbo.MONHOC(MAMH)
GO

--GIAOVIEN
ALTER TABLE dbo.GIAOVIEN ADD CONSTRAINT FK_GV FOREIGN KEY(MAKHOA) REFERENCES dbo.KHOA(MAKHOA)
GO

--GIANGDAY
ALTER TABLE dbo.GIANGDAY ADD CONSTRAINT FK1_GD FOREIGN KEY(MALOP) REFERENCES dbo.LOP(MALOP)
GO
ALTER TABLE dbo.GIANGDAY ADD CONSTRAINT FK2_GD FOREIGN KEY(MAMH) REFERENCES dbo.MONHOC(MAMH)
GO
ALTER TABLE dbo.GIANGDAY ADD CONSTRAINT FK3_GD FOREIGN KEY(MAGV) REFERENCES dbo.GIAOVIEN(MAGV)
GO

--KETQUATHI
ALTER TABLE dbo.KETQUATHI ADD CONSTRAINT FK1_KQT FOREIGN KEY(MAHV) REFERENCES dbo.HOCVIEN(MAHV)
GO
ALTER TABLE dbo.KETQUATHI ADD CONSTRAINT FK2_KQT FOREIGN KEY(MAMH) REFERENCES dbo.MONHOC(MAMH)
GO

--Thêm vào 3 thuộc tính GHICHU, DIEMTB, XEPLOAI cho quan hệ HOCVIEN.
--GHICHU
ALTER TABLE dbo.HOCVIEN ADD GHICHU VARCHAR(40)
GO
--DIEMTB
ALTER TABLE dbo.HOCVIEN ADD DIEMTB NUMERIC(4,2)
GO
--XEPLOAI
ALTER TABLE dbo.HOCVIEN ADD XEPLOAI VARCHAR(10)
GO

--2. Mã học viên là một chuỗi 5 ký tự, 3 ký tự đầu là mã lớp, 2 ký tự cuối cùng là số thứ tự học viên
--trong lớp. VD: “K1101”
CREATE TRIGGER UTR_HOCVIEN
ON HOCVIEN
FOR INSERT, UPDATE 
AS
BEGIN
	DECLARE @SISO TINYINT, @MAHV CHAR(5), @MALOP CHAR(3)

	SELECT @MAHV = MAHV, @MALOP = MALOP FROM INSERTED
	SELECT @SISO = SISO FROM LOP WHERE LOP.MALOP = @MALOP

	IF LEFT(@MAHV,3) <> @MALOP
	BEGIN
		PRINT('3 ky tu dau cua MAHV phai la MALOP')
		ROLLBACK TRAN
	END
	
	ELSE IF CAST(RIGHT(@MAHV, 2) AS INT) NOT BETWEEN 1 AND @SISO
	BEGIN
		PRINT('2 ky tu cuoi cua MAHV phai la so thu tu hoc vien trong lop')
		ROLLBACK TRAN
	END
END
GO

--3. Thuộc tính GIOITINH chỉ có giá trị là “Nam” hoặc “Nu”.
ALTER TABLE dbo.HOCVIEN ADD CONSTRAINT CHK_GTHV CHECK(GIOITINH IN ('Nam','Nu'))
GO
ALTER TABLE dbo.GIAOVIEN ADD CONSTRAINT CHK_GTGV CHECK(GIOITINH IN ('Nam','Nu'))
GO
--4. Điểm số của một lần thi có giá trị từ 0 đến 10 và cần lưu đến 2 số lẽ (VD: 6.22).
ALTER TABLE KETQUATHI ADD CONSTRAINT CHECK_DIEM CHECK 
(
	DIEM BETWEEN 0 AND 10
	AND RIGHT(CAST(DIEM AS VARCHAR), 3) LIKE '.__'
)
GO
--5. Kết quả thi là “Dat” nếu điểm từ 5 đến 10 và “Khong dat” nếu điểm nhỏ hơn 5.
ALTER TABLE dbo.KETQUATHI ADD CONSTRAINT CHK_KQT CHECK
(((DIEM >= 5) AND (DIEM <= 10)) AND (KQUA = 'Dat')
OR
((DIEM < 5) AND (KQUA = 'Khong dat')))
GO
--6. Học viên thi một môn tối đa 3 lần.
ALTER TABLE dbo.KETQUATHI ADD CONSTRAINT CHK_LT CHECK(LANTHI >= 1 AND LANTHI <= 3)
GO
--7. Học kỳ chỉ có giá trị từ 1 đến 3.
ALTER TABLE dbo.GIANGDAY ADD CONSTRAINT CHK_HK CHECK(HOCKY >= 1 AND HOCKY <= 3)
GO
--8. Học vị của giáo viên chỉ có thể là “CN”, “KS”, “Ths”, ”TS”, ”PTS”.
ALTER TABLE dbo.GIAOVIEN ADD CONSTRAINT CHK_HOCVI CHECK(HOCVI IN ('CN', 'KS', 'Ths', 'TS', 'PTS'))
GO
--9. Lớp trưởng của một lớp phải là học viên của lớp đó.
CREATE TRIGGER UTR_LopTruong 
ON LOP
FOR INSERT, UPDATE
AS
BEGIN
	IF NOT EXISTS (SELECT * FROM INSERTED I, HOCVIEN HV
	WHERE I.TRGLOP = HV.MAHV AND I.MALOP = HV.MALOP)
	BEGIN
		PRINT('Lop truong cua mot lop phai la hoc vien cua lop do!')
		ROLLBACK TRAN
	END
END
GO

CREATE TRIGGER UTR_HV
ON HOCVIEN
FOR DELETE
AS
BEGIN
	IF EXISTS(SELECT * FROM Deleted D, Inserted I, LOP AS L
	WHERE D.MAHV = L.TRGLOP AND D.MALOP = L .MALOP)
	BEGIN
		PRINT('Khong the xoa!!! Hoc vien dang la lop truong!')
		ROLLBACK TRAN
	END
END
GO

--10. Trưởng khoa phải là giáo viên thuộc khoa và có học vị “TS” hoặc “PTS”.
CREATE TRIGGER UTR_TRUONGKHOA
ON KHOA
FOR INSERT, UPDATE
AS 
BEGIN
	IF NOT EXISTS(SELECT * FROM Inserted I, dbo.GIAOVIEN AS GV
	WHERE I.TRGKHOA = GV.MAGV AND I.MAKHOA = GV.MAKHOA AND GV.HOCVI IN ('TS', 'PTS'))
	BEGIN
		PRINT('Truong khoa phai la giao vien thuoc khoa va co hoc vi "TS" hoac "PTS"!')
		ROLLBACK TRAN
	END
END
GO

CREATE TRIGGER UTR_GV
ON GIAOVIEN
FOR DELETE
AS
BEGIN
	IF EXISTS(SELECT * FROM Deleted D, Inserted I, dbo.KHOA AS K
	WHERE D.MAGV = K.TRGKHOA AND D.MAKHOA = K.MAKHOA AND D.HOCVI IN('TS', 'PTS'))
	BEGIN
	    PRINT('Khong the xoa!!! Giao vien dang la truong khoa!')
		ROLLBACK TRAN
	END
END
GO

--11. Học viên ít nhất là 18 tuổi.
ALTER TABLE dbo.HOCVIEN ADD CONSTRAINT CHK_TUOI CHECK(YEAR(GETDATE()) - YEAR(NGSINH) >= 18)
GO
--12. Giảng dạy một môn học ngày bắt đầu (TUNGAY) phải nhỏ hơn ngày kết thúc (DENNGAY).
ALTER TABLE dbo.GIANGDAY ADD CONSTRAINT CHK_GIANGDAY CHECK(TUNGAY < DENNGAY)
GO
--13. Giáo viên khi vào làm ít nhất là 22 tuổi.
ALTER TABLE dbo.GIAOVIEN ADD CONSTRAINT CHK_TUOILAM CHECK(YEAR(NGVL) - YEAR(NGSINH) >= 22)
GO
--14. Tất cả các môn học đều có số tín chỉ lý thuyết và tín chỉ thực hành chênh lệch nhau không quá 3.
CREATE TRIGGER UTR_MONHOC
ON dbo.MONHOC
FOR INSERT, UPDATE
AS
BEGIN
	DECLARE @TCLT TINYINT, @TCTH TINYINT

	SELECT @TCLT = TCLT, @TCTH = TCTH FROM Inserted

	IF(ABS(@TCLT - @TCTH) > 3)
	BEGIN
		PRINT('Tin chi ly thuyet va tin chi thuc hanh chenh lech nhau khong qua 3')
		ROLLBACK TRAN
	END
END
GO
--15. Học viên chỉ được thi một môn học nào đó khi lớp của học viên đã học xong môn học này.
CREATE TRIGGER insert_kqt
ON dbo.KETQUATHI
FOR INSERT, UPDATE
AS
BEGIN
	IF NOT EXISTS (SELECT * FROM Inserted AS I JOIN dbo.GIANGDAY AS GD ON GD.MAMH = I.MAMH)
	BEGIN
		PRINT('Chi duoc thi mon da duoc giang day')
		ROLLBACK TRAN
	END
END
GO

CREATE TRIGGER update_gd
ON dbo.GIANGDAY
FOR	UPDATE
AS
BEGIN
	IF NOT EXISTS (SELECT * FROM Inserted AS I JOIN dbo.KETQUATHI AS KQT ON KQT.MAMH = I.MAMH)
	BEGIN
		PRINT('Khong the sua mon da thi')
		ROLLBACK TRAN
	END
END
GO

CREATE TRIGGER delete_gd
ON dbo.GIANGDAY
FOR	DELETE
AS
BEGIN
	IF NOT EXISTS (SELECT * FROM Deleted AS D JOIN dbo.KETQUATHI AS KQT ON KQT.MAMH = D.MAMH)
	BEGIN
		PRINT('Khong the xoa mon da thi')
		ROLLBACK TRAN
	END
END
GO
--16. Mỗi học kỳ của một năm học, một lớp chỉ được học tối đa 3 môn.
CREATE TRIGGER insert_gd
ON dbo.GIANGDAY
FOR INSERT, UPDATE
AS
BEGIN
	IF EXISTS(SELECT * FROM Inserted AS I, dbo.GIANGDAY AS GD 
				WHERE I.NAM = GD.NAM AND I.HOCKY = GD. HOCKY AND COUNT( DISTINCT I.MAMH) > 3)
	BEGIN
		PRINT ('Moi hoc ky cua nam hoc, moi lop chi duoc hoc toi da 3 mon')
		ROLLBACK TRAN
	END
END
GO
--17. Sỉ số của một lớp bằng với số lượng học viên thuộc lớp đó.
--18. Trong quan hệ DIEUKIEN giá trị của thuộc tính MAMH và MAMH_TRUOC trong cùng một bộ
--không được giống nhau (“A”,”A”) và cũng không tồn tại hai bộ (“A”,”B”) và (“B”,”A”).
--19. Các giáo viên có cùng học vị, học hàm, hệ số lương thì mức lương bằng nhau.
--20. Học viên chỉ được thi lại (lần thi >1) khi điểm của lần thi trước đó dưới 5.
--21. Ngày thi của lần thi sau phải lớn hơn ngày thi của lần thi trước (cùng học viên, cùng môn học).
--22. Học viên chỉ được thi những môn mà lớp của học viên đó đã học xong.
--23. Khi phân công giảng dạy một môn học, phải xét đến thứ tự trước sau giữa các môn học (sau khi học
--xong những môn học phải học trước mới được học những môn liền sau).
--24. Giáo viên chỉ được phân công dạy những môn thuộc khoa giáo viên đó phụ trách.

--II. Ngôn ngữ thao tác dữ liệu (Data Manipulation Language):
--1. Tăng hệ số lương thêm 0.2 cho những giáo viên là trưởng khoa.
UPDATE dbo.GIAOVIEN SET HESO = HESO + 0.2 
WHERE
MAGV IN (SELECT TRGKHOA FROM dbo.KHOA)
GO
--2. Cập nhật giá trị điểm trung bình tất cả các môn học (DIEMTB) của mỗi học viên (tất cả các môn
--học đều có hệ số 1 và nếu học viên thi một môn nhiều lần, chỉ lấy điểm của lần thi sau cùng).
UPDATE dbo.HOCVIEN
SET DIEMTB = 
(
	SELECT AVG(DIEM) FROM dbo.KETQUATHI
	WHERE LANTHI = 
	(
		SELECT MAX(LANTHI) FROM dbo.KETQUATHI
		WHERE MAHV = dbo.KETQUATHI.MAHV
		GROUP BY MAHV
	)
	GROUP BY MAHV
	HAVING MAHV = dbo.HOCVIEN.MAHV
)
--3. Cập nhật giá trị cho cột GHICHU là “Cam thi” đối với trường hợp: học viên có một môn bất kỳ thi
--lần thứ 3 dưới 5 điểm.
UPDATE dbo.HOCVIEN
SET GHICHU = 'Cam thi'
WHERE MAHV IN
(
	SELECT MAHV FROM dbo.KETQUATHI
	WHERE LANTHI = 3 AND DIEM < 5
)
--4. Cập nhật giá trị cho cột XEPLOAI trong quan hệ HOCVIEN như sau:
--Nếu DIEMTB >= 9 thì XEPLOAI =”XS”
--Nếu 8 <= DIEMTB < 9 thì XEPLOAI = “G”
--Nếu 6.5 <= DIEMTB < 8 thì XEPLOAI = “K”
--Nếu 5 <= DIEMTB < 6.5 thì XEPLOAI = “TB”
--Nếu DIEMTB < 5 thì XEPLOAI = ”Y”
UPDATE dbo.HOCVIEN
SET XEPLOAI = 
(
	CASE
		WHEN DIEMTB >= 9 THEN 'XS'
		WHEN DIEMTB >= 8 AND DIEMTB < 9 THEN 'G'
		WHEN DIEMTB >= 6.5 AND DIEMTB < 8 THEN 'K'
		WHEN DIEMTB >= 5 AND DIEMTB < 6.5 THEN 'TB'
		WHEN DIEMTB < 6 THEN 'Y'
	END
)

--UPDATE dbo.HOCVIEN
--SET XEPLOAI = 'XS'
--WHERE DIEMTB >= 9

--III. Ngôn ngữ truy vấn dữ liệu:
--1. In ra danh sách (mã học viên, họ tên, ngày sinh, mã lớp) lớp trưởng của các lớp.
SELECT HV.MAHV, HV.HO + ' ' + HV.TEN AS HOTEN, HV.NGSINH, HV.MALOP 
FROM dbo.LOP AS L, dbo.HOCVIEN AS HV
WHERE L.TRGLOP = HV.MAHV
--2. In ra bảng điểm khi thi (mã học viên, họ tên , lần thi, điểm số) môn CTRR của lớp “K12”, sắp xếp
--theo tên, họ học viên.
SELECT HV.MAHV, HV.HO + ' ' + HV.TEN AS HOTEN, KQT.LANTHI, KQT.DIEM
FROM dbo.HOCVIEN AS HV, dbo.KETQUATHI AS KQT
WHERE 
KQT.MAHV = HV. MAHV
AND KQT.MAMH = 'CTRR' 
AND HV.MALOP = 'K12'
ORDER BY 
HV.TEN, HV.HO
--3. In ra danh sách những học viên (mã học viên, họ tên) và những môn học mà học viên đó thi lần thứ
--nhất đã đạt.
SELECT HV.MAHV, HV.HO + ' ' + HV.TEN AS HOTEN, MH.*
FROM dbo.HOCVIEN AS HV, dbo.KETQUATHI AS KQT, dbo.MONHOC AS MH
WHERE 
KQT.MAHV = HV. MAHV
AND KQT.MAMH = MH.MAMH
AND KQT.LANTHI = 1 
AND KQT.KQUA = 'Dat'
--4. In ra danh sách học viên (mã học viên, họ tên) của lớp “K11” thi môn CTRR không đạt (ở lần thi 1).
SELECT HV.MAHV, HV.HO + ' ' + HV.TEN AS HOTEN
FROM dbo.HOCVIEN AS HV, dbo.KETQUATHI AS KQT
WHERE 
KQT.MAHV = HV. MAHV
AND KQT.MAMH = 'CTRR' 
AND HV.MALOP = 'K11'
AND KQT.LANTHI = 1
AND KQT.KQUA = 'Khong Dat'
--5. * Danh sách học viên (mã học viên, họ tên) của lớp “K” thi môn CTRR không đạt (ở tất cả các lần
--thi).
SELECT DISTINCT HV.MAHV, HV.HO + ' ' + HV.TEN AS HOTEN
FROM dbo.HOCVIEN AS HV, dbo.KETQUATHI AS KQT
WHERE 
KQT.MAHV = HV. MAHV
AND KQT.MAMH = 'CTRR'
AND HV.MALOP LIKE 'K%'
AND NOT EXISTS
(
	SELECT * /*Hoac LANTHI*/ FROM dbo.KETQUATHI
	WHERE KQUA = 'Dat'
	AND MAMH = 'CTRR'
	AND MAHV = HV.MAHV
)
--6. Tìm tên những môn học mà giáo viên có tên “Tran Tam Thanh” dạy trong học kỳ 1 năm 2006.
SELECT DISTINCT MH.TENMH 
FROM dbo.MONHOC AS MH, dbo.GIAOVIEN AS GV, dbo.GIANGDAY AS GD
WHERE
GD.MAMH = MH.MAMH
AND GV.MAGV = GD.MAGV
AND GV.HOTEN = 'Tran Tam Thanh'
AND GD.HOCKY = 1
AND GD.NAM = 2006
--7. Tìm những môn học (mã môn học, tên môn học) mà giáo viên chủ nhiệm lớp “K11” dạy trong học
--kỳ 1 năm 2006.
SELECT DISTINCT MH.MAMH, MH.TENMH 
FROM dbo.MONHOC AS MH, dbo.LOP AS L, dbo.GIANGDAY AS GD
WHERE
GD.MAMH = MH.MAMH
AND L.MAGVCN = GD.MAGV
AND L.MALOP = 'K11'
AND GD.HOCKY = 1
AND GD.NAM = 2006
--8. Tìm họ tên lớp trưởng của các lớp mà giáo viên có tên “Nguyen To Lan” dạy môn “Co So Du Lieu”.
SELECT HV.HO + ' ' + HV.TEN AS HOTEN
FROM dbo.HOCVIEN AS HV, dbo.LOP AS L, dbo.GIAOVIEN AS GV, dbo.MONHOC AS MH, dbo.GIANGDAY AS GD
WHERE
L.TRGLOP = HV.MAHV
AND GD.MAGV = GV.MAGV
AND GD.MALOP = L.MALOP
AND GD.MAMH = MH.MAMH
AND GV.HOTEN = 'Nguyen To Lan'
AND MH.TENMH = 'Co So Du Lieu'
--9. In ra danh sách những môn học (mã môn học, tên môn học) phải học liền trước môn “Co So Du
--Lieu”.
SELECT MH.MAMH, MH.TENMH
FROM dbo.MONHOC AS MH, dbo.DIEUKIEN AS DK
WHERE
MH.MAMH = DK.MAMH
AND DK.MAMH_TRUOC = 'CSDL'
--10. Môn “Cau Truc Roi Rac” là môn bắt buộc phải học liền trước những môn học (mã môn học, tên
--môn học) nào.
SELECT MH.MAMH, MH.TENMH
FROM dbo.MONHOC AS MH, dbo.DIEUKIEN AS DK
WHERE
MH.MAMH = DK.MAMH
AND DK.MAMH_TRUOC = 'CTRR'
--11. Tìm họ tên giáo viên dạy môn CTRR cho cả hai lớp “K11” và “K12” trong cùng học kỳ 1 năm 2006.
SELECT HOTEN
FROM dbo.GIAOVIEN AS GV INNER JOIN dbo.GIANGDAY AS GD
ON GD.MAGV = GV.MAGV
WHERE GD.MAMH = 'CTRR'
AND GD.MALOP = 'K11'
AND GD.HOCKY = 1
AND GD.NAM = 2006
INTERSECT
SELECT HOTEN
FROM dbo.GIAOVIEN AS GV INNER JOIN dbo.GIANGDAY AS GD
ON GD.MAGV = GV.MAGV
WHERE GD.MAMH = 'CTRR'
AND GD.MALOP = 'K12'
AND GD.HOCKY = 1
AND GD.NAM = 2006
--12. Tìm những học viên (mã học viên, họ tên) thi không đạt môn CSDL ở lần thi thứ 1 nhưng chưa thi
--lại môn này.
SELECT HV.MAHV, HV.HO + ' ' + HV.TEN AS HOTEN
FROM dbo.HOCVIEN AS HV JOIN dbo.KETQUATHI AS KQT
ON KQT.MAHV = HV.MAHV
WHERE KQT.MAMH = 'CSDL'
AND KQT.LANTHI = 1
AND KQT.KQUA = 'Khong Dat'
AND NOT EXISTS (SELECT * FROM dbo.KETQUATHI kqt2 WHERE kqt2.LANTHI > 1 AND kqt2.MAHV = HV.MAHV)
--13. Tìm giáo viên (mã giáo viên, họ tên) không được phân công giảng dạy bất kỳ môn học nào.
SELECT MAGV, HOTEN
FROM dbo.GIAOVIEN
WHERE MAGV NOT IN (SELECT MAGV FROM dbo.GIANGDAY)
--14. Tìm giáo viên (mã giáo viên, họ tên) không được phân công giảng dạy bất kỳ môn học nào thuộc
--khoa giáo viên đó phụ trách.
SELECT GV.MAGV, GV.HOTEN
FROM dbo.GIAOVIEN AS GV
WHERE NOT EXISTS
(SELECT * FROM dbo.MONHOC AS MH 
	WHERE MH.MAKHOA = GV.MAKHOA AND NOT EXISTS ( SELECT * FROM dbo.GIANGDAY AS GD
													WHERE GD.MAMH = MH.MAMH AND GD.MAGV = GV.MAGV))
--15. Tìm họ tên các học viên thuộc lớp “K11” thi một môn bất kỳ quá 3 lần vẫn “Khong dat” hoặc thi lần
--thứ 2 môn CTRR được 5 điểm.
SELECT DISTINCT HV.HO + ' ' + HV.TEN AS HOTEN
FROM dbo.HOCVIEN AS HV JOIN dbo.KETQUATHI AS KQT
ON KQT.MAHV = HV.MAHV
WHERE HV.MALOP = 'K11'
AND KQT.LANTHI > 3
AND KQT.KQUA = 'Khong Dat'
UNION
SELECT DISTINCT HV.HO + ' ' + HV.TEN AS HOTEN
FROM dbo.HOCVIEN AS HV JOIN dbo.KETQUATHI AS KQT
ON KQT.MAHV = HV.MAHV
WHERE HV.MALOP = 'K11'
AND KQT.LANTHI = 2
AND KQT.MAMH = 'CTRR'
AND KQT.DIEM = 5
--16. Tìm họ tên giáo viên dạy môn CTRR cho ít nhất hai lớp trong cùng một học kỳ của một năm học.
SELECT DISTINCT GV.HOTEN
FROM dbo.GIAOVIEN AS GV JOIN dbo.GIANGDAY AS GD
ON GD.MAGV = GV.MAGV
WHERE GD.MAMH = 'CTRR'
AND GV.MAGV IN (
SELECT MAGV
FROM dbo.GIANGDAY
GROUP BY MAGV, HOCKY
HAVING COUNT(DISTINCT MALOP) >= 2)

SELECT GV.HOTEN
FROM dbo.GIAOVIEN AS GV JOIN dbo.GIANGDAY AS GD
ON GD.MAGV = GV.MAGV
WHERE GD.MAMH = 'CTRR'
GROUP BY GV.HOTEN, GD.HOCKY
HAVING COUNT(*) >= 2
--17. Danh sách học viên và điểm thi môn CSDL (chỉ lấy điểm của lần thi sau cùng).
SELECT HV.*, DIEM AS N'DIEM LAN THI SAU CUNG'
FROM dbo.HOCVIEN AS HV JOIN dbo.KETQUATHI AS KQ01 ON KQ01.MAHV = HV.MAHV
WHERE KQ01.MAMH = 'CSDL'
AND KQ01.LANTHI = ( SELECT MAX(KQ02.LANTHI)
					FROM dbo.KETQUATHI AS KQ02
					WHERE HV.MAHV = KQ02.MAHV
					AND MAMH = 'CSDL'
					GROUP BY KQ02.MAHV)
--18. Danh sách học viên và điểm thi môn “Co So Du Lieu” (chỉ lấy điểm cao nhất của các lần thi).
SELECT HV.*, DIEM AS N'DIEM CAO NHAT CAC LAN THI'
FROM (dbo.HOCVIEN AS HV JOIN dbo.KETQUATHI AS KQ01 ON KQ01.MAHV = HV.MAHV) JOIN dbo.MONHOC AS MH01 ON KQ01.MAMH = MH01.MAMH
WHERE MH01.TENMH = 'Co so du lieu'
AND KQ01.DIEM = ( SELECT MAX(KQ02.DIEM)
					FROM dbo.KETQUATHI AS KQ02 JOIN dbo.MONHOC AS MH02 ON MH02.MAMH = KQ02.MAMH
					WHERE HV.MAHV = KQ02.MAHV
					AND MH02.TENMH = 'Co so du lieu'
					GROUP BY KQ02.MAHV)
--19. Khoa nào (mã khoa, tên khoa) được thành lập sớm nhất.
SELECT MAKHOA, TENKHOA
FROM KHOA
WHERE NGTLAP = (SELECT MIN(NGTLAP) FROM KHOA)
--20. Có bao nhiêu giáo viên có học hàm là “GS” hoặc “PGS”.
SELECT COUNT(MAGV)
FROM dbo.GIAOVIEN
WHERE HOCHAM IN ('GS', 'PGS')
--21. Thống kê có bao nhiêu giáo viên có học vị là “CN”, “KS”, “Ths”, “TS”, “PTS” trong mỗi khoa.
SELECT MAKHOA, HOCVI, COUNT(MAGV)
FROM dbo.GIAOVIEN
GROUP BY MAKHOA, HOCVI
ORDER BY MAKHOA
--22. Mỗi môn học thống kê số lượng học viên theo kết quả (đạt và không đạt).
SELECT MAMH, KQUA, COUNT(MAHV)
FROM dbo.KETQUATHI
GROUP BY MAMH, KQUA
ORDER BY MAMH
--23. Tìm giáo viên (mã giáo viên, họ tên) là giáo viên chủ nhiệm của một lớp, đồng thời dạy cho lớp đó ít
--nhất một môn học.
SELECT DISTINCT GV.MAGV, GV.HOTEN
FROM dbo.GIAOVIEN AS GV, LOP AS L, dbo.GIANGDAY AS GD
WHERE GV.MAGV = L.MAGVCN
AND GV.MAGV = GD.MAGV
AND GD.MALOP = L.MALOP
--24. Tìm họ tên lớp trưởng của lớp có sỉ số cao nhất.
SELECT HV.HO + ' ' + HV.TEN AS HOTEN
FROM dbo.HOCVIEN AS HV JOIN dbo.LOP AS L ON L.TRGLOP = HV.MAHV
WHERE L.SISO = (SELECT MAX(SISO) FROM LOP)
GO
--25. * Tìm họ tên những LOPTRG thi không đạt quá 3 môn (mỗi môn đều thi không đạt ở tất cả các lần
--thi).
CREATE VIEW KQT_TEMP AS --Bảng chứa những học viên với mã môn học có số lần thi không đạt lớn nhất
SELECT MAHV, MAMH, MAX(LANTHI) AS SL
FROM dbo.KETQUATHI
WHERE KQUA = 'Khong Dat'
GROUP BY MAHV, MAMH
GO

CREATE VIEW TEST AS --Bảng chứa thông tin những môn có số lần thi không đạt cao nhất bằng với số lần thi cao nhất
SELECT *			--để đảm bảo tất cả lần thi đều không đạt
FROM dbo.KQT_TEMP
INTERSECT
SELECT MAHV, MAMH, MAX(LANTHI) AS SL
FROM dbo.KETQUATHI
GROUP BY MAHV, MAMH
GO

SELECT HV.HO + ' ' + HV.TEN AS HOTEN
FROM dbo.HOCVIEN AS HV, dbo.LOP AS L, dbo.KETQUATHI AS KQ
WHERE L.TRGLOP = HV.MAHV
AND HV.MAHV = KQ.MAHV
AND HV.MAHV IN (SELECT MAHV
				FROM TEST
				GROUP BY MAHV
				HAVING COUNT(MAMH) > 3)

SELECT HV.HO + ' ' + HV.TEN AS HOTEN
FROM HOCVIEN AS HV JOIN dbo.LOP AS L ON L.TRGLOP = HV.MAHV
WHERE HV.MAHV IN (SELECT t1.MAHV
					FROM (SELECT DISTINCT kq.MAHV, kq.MAMH 
							FROM KETQUATHI kq
							WHERE NOT EXISTS (SELECT *
												FROM KETQUATHI kq2
												WHERE kq2.MAHV = kq.MAHV
												AND kq2.MAMH = kq.MAMH
												AND kq2.KQUA = 'Dat')) AS t1
					GROUP BY t1.MAHV
					HAVING COUNT(t1.MAMH) > 3)
--26. Tìm học viên (mã học viên, họ tên) có số môn đạt điểm 9,10 nhiều nhất.
SELECT TOP 1 WITH TIES HV.MAHV, HV.HO + ' ' + HV.TEN AS HOTEN
FROM dbo.HOCVIEN AS HV JOIN dbo.KETQUATHI AS KQ ON KQ.MAHV = HV.MAHV
WHERE DIEM >= 9
GROUP BY HV.MAHV, HV.HO, HV.TEN
ORDER BY COUNT(*) DESC
--27. Trong từng lớp, tìm học viên (mã học viên, họ tên) có số môn đạt điểm 9,10 nhiều nhất.
SELECT KQ.MALOP, KQ.MAHV, KQ.HOTEN, KQ.SOLUONG
FROM  ( SELECT HV.MALOP, HV.MAHV, HV.HO + ' ' + HV.TEN AS HOTEN, COUNT(DIEM) AS SOLUONG, 
				RANK() OVER(PARTITION BY HV.MALOP ORDER BY COUNT(*) DESC) AS score_rank
		FROM dbo.HOCVIEN AS HV JOIN dbo.KETQUATHI AS KQ ON KQ.MAHV = HV.MAHV
		WHERE DIEM >= 9
		GROUP BY MALOP, HV.MAHV, HV.HO, HV.TEN) AS KQ
WHERE kq.score_rank = 1
--28. Trong từng học kỳ của từng năm, mỗi giáo viên phân công dạy bao nhiêu môn học, bao nhiêu lớp.
SELECT HOCKY, NAM, MAGV, COUNT(DISTINCT MAMH) AS SLMH, COUNT(MALOP) AS SLLOP
FROM dbo.GIANGDAY
GROUP BY HOCKY, NAM, MAGV
--29. Trong từng học kỳ của từng năm, tìm giáo viên (mã giáo viên, họ tên) giảng dạy nhiều nhất.
SELECT NAM, KQ.HOCKY, GV.MAGV, GV.HOTEN
FROM  ( SELECT HOCKY, NAM, MAGV, RANK() OVER(PARTITION BY HOCKY, NAM ORDER BY COUNT(*) DESC) AS teach_rank
		FROM dbo.GIANGDAY
		GROUP BY HOCKY, NAM, MAGV) AS KQ JOIN dbo.GIAOVIEN AS GV ON GV.MAGV = KQ.MAGV
WHERE KQ.teach_rank = 1
ORDER BY NAM, KQ.HOCKY
--30. Tìm môn học (mã môn học, tên môn học) có nhiều học viên thi không đạt (ở lần thi thứ 1) nhất.
SELECT TOP 1 WITH TIES MH.MAMH, MH.TENMH
FROM dbo.MONHOC AS MH JOIN dbo.KETQUATHI AS KQ ON KQ.MAMH = MH.MAMH
WHERE KQ.LANTHI = 1 AND KQ.KQUA = 'Khong Dat'
GROUP BY MH.MAMH, MH.TENMH
ORDER BY COUNT(MAHV) DESC
--31. Tìm học viên (mã học viên, họ tên) thi môn nào cũng đạt (chỉ xét lần thi thứ 1).
SELECT DISTINCT HV.MAHV, HV.HO + ' ' + HV.TEN AS HOTEN
FROM dbo.HOCVIEN AS HV JOIN dbo.KETQUATHI AS KQ ON KQ.MAHV = HV.MAHV
WHERE NOT EXISTS(SELECT *
					FROM KetQuaThi AS KQT
					WHERE LanThi = 1
					AND KQua = 'Khong Dat'
					AND KQT.MAHV = HV.MAHV)
--32. * Tìm học viên (mã học viên, họ tên) thi môn nào cũng đạt (chỉ xét lần thi sau cùng).
SELECT DISTINCT HV.MAHV, HV.HO + ' ' + HV.TEN AS HOTEN
FROM dbo.HOCVIEN AS HV JOIN dbo.KETQUATHI AS KQ ON KQ.MAHV = HV.MAHV
WHERE NOT EXISTS(SELECT *
					FROM KetQuaThi AS KQT
					WHERE LanThi = (SELECT MAX(LANTHI) FROM dbo.KETQUATHI WHERE MAHV = HV.MAHV GROUP BY MAHV)
					AND KQua = 'Khong Dat'
					AND KQT.MAHV = HV.MAHV)
--33. * Tìm học viên (mã học viên, họ tên) đã thi tất cả các môn đều đạt (chỉ xét lần thi thứ 1).
SELECT HV.MAHV, HV.HO + ' ' + HV.TEN AS HOTEN
FROM dbo.HOCVIEN AS HV
WHERE NOT EXISTS ( SELECT *
					FROM dbo.MONHOC AS MH
					WHERE NOT EXISTS ( SELECT *
										FROM dbo.KETQUATHI AS KQ
										WHERE KQ.MAMH = MH.MAMH
										AND HV.MAHV = KQ.MAHV
										AND KQ.LANTHI = 1
										AND KQ.KQUA = 'Dat'))
--34. * Tìm học viên (mã học viên, họ tên) đã thi tất cả các môn đều đạt (chỉ xét lần thi sau cùng).
SELECT HV.MAHV, HV.HO + ' ' + HV.TEN AS HOTEN
FROM dbo.HOCVIEN AS HV
WHERE NOT EXISTS ( SELECT *
					FROM dbo.MONHOC AS MH
					WHERE NOT EXISTS ( SELECT *
										FROM dbo.KETQUATHI AS KQ
										WHERE KQ.MAMH = MH.MAMH
										AND HV.MAHV = KQ.MAHV
										AND KQ.LANTHI = (SELECT MAX(LANTHI) FROM dbo.KETQUATHI WHERE MAHV = HV.MAHV GROUP BY MAHV)
										AND KQ.KQUA = 'Dat'))
--35. ** Tìm học viên (mã học viên, họ tên) có điểm thi cao nhất trong từng môn (lấy điểm ở lần thi sau
--cùng).
SELECT KQ.MAMH, KQ.MAHV, KQ.HOTEN
FROM ( SELECT KQT.MAMH, HV.MAHV, HV.HO + ' ' + HV.TEN AS HOTEN, RANK() OVER(PARTITION BY KQT.MAMH ORDER BY MAX(DIEM) DESC) AS max_rank
		FROM dbo.HOCVIEN AS HV JOIN dbo.KETQUATHI AS KQT ON KQT.MAHV = HV.MAHV
		WHERE KQT.LANTHI = (SELECT MAX(LANTHI) FROM dbo.KETQUATHI WHERE MAHV = HV.MAHV GROUP BY MAHV)
		GROUP BY MAMH, HV.MAHV, HV.HO, HV.TEN) AS KQ
WHERE KQ.max_rank = 1
